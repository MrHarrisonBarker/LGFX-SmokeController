                    <Track.Thumb>
                        <Thumb x:Name="Thumb" Focusable="False" Width="30" Height="18" OverridesDefaultStyle="True" Template="{StaticResource SliderThumbHorizontalDefault}" VerticalAlignment="Stretch"/>
